<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- <data>
        <variable
            name="addAlbumViewModel"
            type="com.example.beadando.addAlbum.AddAlbumViewModel" />
        <variable
            name="myAlbum"
            type="com.example.beadando.addAlbum.MyAlbum" />
    </data> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".addNewAlbum.AddNewAlbumFragment"
        >
        <!--  tools:context=".albums.AddAlbumFragment"  -->

        <TextView
            android:id="@+id/addAlbumTV"
            style="@style/HelloStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add an album"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#323232" />

        <EditText
            android:id="@+id/titleEdit"
            style="@style/HelloStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Title"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/artistEdit"
            style="@style/HelloStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Artist"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/releaseEdit"
            style="@style/HelloStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Release year"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#4CAF50"
            android:text="@string/done"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4CAF50" />
            <!--  android:onClick="@{() -> addAlbumViewModel.addAlbum(myAlbum.title, myAlbum.artist, myAlbum.release)}"   -->

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16px"
            android:background="#4CAF50"

            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4CAF50" />
            <!--  android:onClick="@{() -> addAlbumViewModel.cancelAddAlbum()}"  -->


    </LinearLayout>

</layout>
