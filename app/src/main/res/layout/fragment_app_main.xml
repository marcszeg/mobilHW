<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="myAnswer"
            type="com.example.beadando.MyAnswer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".addNewAlbum.AddNewAlbumFragment">

        <!-- <fragment
            android:id="@+id/titleFragment"
            android:name="com.example.beadando.TitleFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" /> -->

        <EditText
            android:id="@+id/nameEdit"
            style="@style/HelloStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/add_your_name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#000000" />

        <Button
            android:id="@+id/done_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#4CAF50"
            android:text="@string/done"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/helloT"
            style="@style/HelloStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{myAnswer.hello}"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#323232" />

        <TextView
            android:id="@+id/answerText"
            style="@style/HelloStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{myAnswer.answer}"
            android:textAlignment="center"
            android:textColor="#000000"
            android:visibility="gone" />

    </LinearLayout>
</layout>